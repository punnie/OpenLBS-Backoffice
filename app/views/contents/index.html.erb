<h1>Listing contents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Tags</th>
    <th>Item file name</th>
    <th>Item content type</th>
    <th>Item file size</th>
    <th>Item updated at</th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%=h content.name %></td>
    <td><%=h content.location_id %></td>
    <td><%=h content.tags %></td>
    <td><%=h content.item_file_name %></td>
    <td><%=h content.item_content_type %></td>
    <td><%=h content.item_file_size %></td>
    <td><%=h content.item_updated_at %></td>
    <td><%= link_to 'Show', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

